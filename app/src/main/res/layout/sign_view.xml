<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sign_title"
            style="@style/Form_TextView"
            android:paddingLeft="@dimen/form_view_margin"
            android:text="烟农签名"/>
        <Button
            android:id="@+id/get_sign"
            style="@style/Form_button"
            android:layout_marginLeft="@dimen/activity_horizontal_margin" android:text="签名"/>

        <Button
            android:id="@+id/remote"
            android:visibility="gone"
            style="@style/Form_button"
            android:layout_marginLeft="@dimen/activity_horizontal_margin" android:text="远程签"/>
    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sign_image"
        android:layout_width="@dimen/form_image_height"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/form_view_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/form_image_height"
        android:layout_height="@dimen/form_image_height" />
</LinearLayout>