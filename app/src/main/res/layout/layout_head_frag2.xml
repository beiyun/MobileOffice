<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/search_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_time_title"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:text="@string/action_settings"
            android:visibility="gone"
            android:textAppearance="@style/text_input_layout_style"
            android:layout_height="wrap_content" />

        <AutoCompleteTextView
            android:id="@+id/search_time"
            android:layout_width="match_parent"
            android:hint="@string/chaxunriqisheding"
            android:paddingStart="@dimen/dp_10"
            android:focusable="false"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_black"
            android:paddingEnd="@dimen/dp_10"
            android:background="@drawable/shape_spinner_bg"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/search_work_name_layout"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_work_name_title"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:text="@string/action_settings"
            android:visibility="gone"
            android:textAppearance="@style/text_input_layout_style"
            android:layout_height="wrap_content" />

        <AutoCompleteTextView
            android:id="@+id/search_work_name"
            style="@style/dropDownSpinner"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_black"
            android:hint="@string/chaxunrenyuan"
            android:drawableEnd="@drawable/ic_arrow_drop_down_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_arrow_drop_down_24dp" />

    </LinearLayout>



</LinearLayout>