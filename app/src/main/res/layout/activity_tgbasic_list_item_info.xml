<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

        <LinearLayout
            style="@style/LinearLayout_Normal_Horizontal"
            android:layout_marginTop="@dimen/dp_10">

                <com.beiyun.workers.view.FormView
                    android:id="@+id/longitude"
                    app:gravity="center"
                    app:inputType="numberDecimal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:titleText="经度"/>

                <com.beiyun.workers.view.FormView
                    android:id="@+id/latitude"
                    app:gravity="center"
                    app:inputType="numberDecimal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:titleText="纬度"/>


                <com.beiyun.workers.view.FormView
                    android:id="@+id/count"
                    app:gravity="center"
                    app:inputType="numberDecimal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:titleText="亩数"/>

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_Normal_Horizontal"
            android:layout_marginTop="@dimen/dp_10">

                <com.beiyun.workers.view.FormView
                    android:id="@+id/landSources"
                    app:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:dropDownStringArray="@array/yes_no"
                    app:titleText="土地来源"/>

                <com.beiyun.workers.view.FormView
                    android:id="@+id/type"
                    app:gravity="center"
                    app:dropDownStringArray="@array/tianyan_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:titleText="烟田类型"/>

        </LinearLayout>


        <com.beiyun.workers.view.FormView
            android:id="@+id/name"
            app:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleText="地块名称"/>


        <LinearLayout
            style="@style/LinearLayout_Normal_Horizontal"
            android:visibility="gone"
            android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="2"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_48"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/white"
                    android:id="@+id/delete"
                    android:background="?android:selectableItemBackground"
                    android:layout_weight="0.6"
                    android:text="@string/delete"/>
        </LinearLayout>

</LinearLayout>