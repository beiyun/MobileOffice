<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:gravity="center_vertical"
    android:minHeight="@dimen/form_view_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/form_view_margin"
        android:layout_marginLeft="@dimen/form_view_margin"
        android:gravity="center_vertical"
        android:text="@string/renwubiaoti"
        android:textAppearance="@style/Nc.Theme.Text.Normal" />


        <AutoCompleteTextView
            android:id="@+id/edit"
            android:layout_marginLeft="@dimen/form_view_margin"
            android:layout_marginStart="@dimen/form_view_margin"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:text="@string/main_search_fab"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimary"
            android:maxEms="20"
            android:ellipsize="end"
            android:maxLines="1"
            android:minWidth="@dimen/dp_50"
            android:singleLine="true"
            android:textAppearance="@style/Nc.Theme.Text.Normal" />

    <TextView
        android:id="@+id/textRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/form_view_margin"
        android:layout_marginStart="@dimen/form_view_margin"
        android:layout_marginRight="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_2"
        android:gravity="center_vertical"
        android:text="@string/renwubiaoti"
        android:textAppearance="@style/Nc.Theme.Text.Normal"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/only_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:lineSpacingExtra="@dimen/dp_10"
        android:minHeight="@dimen/form_view_height"
        android:textAppearance="@style/Nc.Theme.Text.Normal"
        android:visibility="gone" />

</LinearLayout>