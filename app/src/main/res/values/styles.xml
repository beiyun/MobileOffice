<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="login_textView_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:labelTextSize">@dimen/sp_12</item>
        <item name="colorAccent">@color/colorWarning</item>
        <item name="android:colorActivatedHighlight">@color/white</item>
    </style>

    <style name="text_match_horizontal" parent="Nc.Theme.Text.Normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- Toolbar 主题 -->
    <style name="Toolbar.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 返回箭头样式 -->
        <item name="drawerArrowStyle">@style/Toolbar.DrawerArrow</item>
        <!-- 导航栏底色 无效-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Actionbar Toolbar 三点menu 颜色 -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!--导航栏上的标题颜色-->
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <!-- 主页返回箭头颜色 和 动画  navigationicon -->
    <style name="Toolbar.DrawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <!-- spinBars 属性 false 和 true 定义了不同的动画效果 -->
        <item name="spinBars">true</item>
        <!-- 設定 drawer arrow 的顏色 -->
        <item name="color">@color/white</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/text_half_gray</item>
    </style>

    <style name="MyAppBarLayout" parent="Base.Widget.Design.AppBarLayout">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="expandedTitle_style">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="toolbarTitle_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="collapsedTitle_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tabLayout_text_style">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="text_input_layout_style" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="list_header_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="dropDownSpinner" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:focusable">false</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="android:background">@drawable/shape_spinner_bg</item>
        <item name="android:dropDownHeight">300dp</item>
        <item name="android:dropDownSpinnerStyle">?android:dropDownSpinnerStyle</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
    </style>

    <style name="Sectional_Line_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/form_view_height</item>
        <item name="android:textAppearance">@style/Nc.Theme.Text.subTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingRight">@dimen/form_view_margin</item>
        <item name="android:paddingLeft">@dimen/form_view_margin</item>
    </style>


    <style name="LinearLayout_Normal_Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LinearLayout_Normal_Vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="text_weight_horizontal" parent="Nc.Theme.Text.Normal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Form_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textAppearance">@style/Nc.Theme.Base.Toolbar.subTitle</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:paddingTop">@dimen/dp_2</item>
        <item name="android:paddingBottom">@dimen/dp_2</item>
    </style>

    <style name="Form_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/Nc.Theme.Text.subTitle</item>
    </style>


    <style name="FullScreenDialog" >
        <!-- 全屏显示dialog -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 去除背景色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>



    <style name="Sectional_Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
