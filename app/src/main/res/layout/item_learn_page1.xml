<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/dp_6"
        android:id="@+id/item_learn_page1_cardView"
        app:cardBackgroundColor="@color/white"
        android:foreground="?selectableItemBackground"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="@dimen/dp_100"
                android:layout_height="90dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/item_learn_page1_image"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="90dp"
                    app:actualImageScaleType="centerCrop"
                    app:fadeDuration="500"
                    app:failureImageScaleType="centerCrop"
                    app:roundBottomEnd="true"
                    android:transitionName="@string/videoImage"
                    app:roundBottomStart="true"
                    app:roundTopStart="true"
                    app:roundTopEnd="true"
                    app:placeholderImage="@mipmap/placeholderimage"
                    app:placeholderImageScaleType="centerCrop"
                    app:roundedCornerRadius="@dimen/dp_6"
                    tools:targetApi="lollipop" />

                <TextView
                    android:id="@+id/item_learn_page1_video_length"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|end"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/white"
                    android:text="01:30"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16">

                <TextView
                    android:id="@+id/item_learn_page1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_16"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.12"
                    android:textColor="@color/text_black"
                    android:text="春山空雨后，天气晚来秋"/>

                <TextView
                    android:id="@+id/item_learn_page1_subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:maxLines="2"
                    android:layout_marginTop="@dimen/dp_10"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.12"
                    android:textColor="@color/text_black"
                    android:text="春山空雨后，天气晚来秋春山空雨后，天气晚来秋春山空雨后，天气晚来秋春山空雨后，天气晚来秋春山空雨后，天气晚来秋春山空雨后，天气晚来秋春山空雨后，天气晚来秋春山空雨后，天气晚来秋"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_learn_page1_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_person_grey_600_18dp"
                        android:textSize="@dimen/sp_12"
                        android:drawablePadding="@dimen/dp_6"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:textColor="@color/text_gray"
                        android:gravity="center"
                        android:text="倾城莲子"
                        android:layout_marginRight="@dimen/dp_16"
                        android:drawableLeft="@drawable/ic_person_grey_600_18dp" />

                    <TextView
                        android:id="@+id/item_learn_page1_play_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_play_circle_outline_grey_600_18dp"
                        android:textSize="@dimen/sp_12"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:drawablePadding="@dimen/dp_6"
                        android:textColor="@color/text_gray"
                        android:text="1000次"
                        android:drawableLeft="@drawable/ic_play_circle_outline_grey_600_18dp" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>