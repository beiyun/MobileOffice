<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.searchfragment.BuyNoticeFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:padding="@dimen/dp_10">

       <LinearLayout style="@style/LinearLayout_Normal_Horizontal">
           <com.beiyun.workers.view.FormView
               android:id="@+id/points"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               app:maxLength="20"
               app:nullAble="false"
               app:titleText="@string/cunzu"/>

           <com.beiyun.workers.view.FormView
               android:id="@+id/name"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               app:maxLength="20"
               app:titleText="@string/yannongxingming1"/>

       </LinearLayout>


       <LinearLayout style="@style/LinearLayout_Normal_Horizontal">
           <com.beiyun.workers.view.FormView
               android:id="@+id/phone"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               app:maxLength="11"
               app:nullAble="false"
               app:inputType="number"
               app:titleText="@string/lianxidianhua"/>

           <com.beiyun.workers.view.FormView
               android:id="@+id/weight"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               app:maxLength="11"
               app:inputType="numberDecimal"
               app:nullAble="false"
               app:titleText="@string/guzhongshuliang"/>

       </LinearLayout>


       <com.beiyun.workers.view.FormView
           android:id="@+id/classificationPlace"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:maxLength="50"
           app:titleText="@string/jizhongfenjididian"/>



       <com.beiyun.workers.view.FormView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="@dimen/dp_6"
           app:only_text="@string/jizhongfenjishiduan"/>


       <LinearLayout style="@style/LinearLayout_Normal_Horizontal">
           <com.beiyun.workers.view.FormView
               android:id="@+id/startDate"
               android:layout_width="0dp"
               app:gravity="center"
               app:inputType="datePiker"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

           <com.beiyun.workers.view.FormView
               android:id="@+id/startTime"
               android:layout_width="0dp"
               app:gravity="center"
               app:inputType="timePiker"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="—"/>

           <com.beiyun.workers.view.FormView
               android:id="@+id/endDate"
               android:layout_width="0dp"
               app:gravity="center"
               app:inputType="datePiker"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

           <com.beiyun.workers.view.FormView
               android:id="@+id/endTime"
               android:layout_width="0dp"
               app:gravity="center"
               app:inputType="timePiker"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

       </LinearLayout>


       <com.beiyun.workers.view.FormView
           android:id="@+id/sellPlace"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:maxLength="50"
           app:nullAble="false"
           app:titleText="@string/yanyejiaoshoudidian"/>



       <com.beiyun.workers.view.FormView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="@dimen/dp_6"
           app:only_text="@string/yuyuejiaoshoushiduan"/>


       <LinearLayout style="@style/LinearLayout_Normal_Horizontal">
           <com.beiyun.workers.view.FormView
               android:id="@+id/beginDate"
               android:layout_width="0dp"
               app:gravity="center"
               app:inputType="datePiker"
               android:layout_height="wrap_content"
               app:nullAble="false"
               android:layout_weight="1"/>

           <com.beiyun.workers.view.FormView
               android:id="@+id/beginTime"
               android:layout_width="0dp"
               app:gravity="center"
               app:nullAble="false"
               app:inputType="timePiker"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="—"/>

           <com.beiyun.workers.view.FormView
               android:id="@+id/finishDate"
               android:layout_width="0dp"
               app:gravity="center"
               app:nullAble="false"
               app:inputType="datePiker"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

           <com.beiyun.workers.view.FormView
               android:id="@+id/finishTime"
               android:layout_width="0dp"
               app:gravity="center"
               app:nullAble="false"
               app:inputType="timePiker"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

       </LinearLayout>


       <com.facebook.drawee.view.SimpleDraweeView
           android:id="@+id/signature"
           android:layout_marginTop="@dimen/dp_10"
           app:placeholderImage="@mipmap/placeholderimage"
           android:layout_width="@dimen/dp_100"
           android:layout_height="@dimen/dp_100"/>

       <com.beiyun.workers.view.FormView
           android:id="@+id/signTime"
           android:layout_width="@dimen/dp_180"
           android:layout_height="wrap_content"
           app:inputType="datePiker"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true"
           app:nullAble="false"
           android:layout_alignBottom="@+id/signature"
           app:titleText="@string/qianzishijian"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dp_40"
           android:textAppearance="@style/Nc.Theme.Text.Normal"
           android:paddingLeft="@dimen/dp_10"
           android:paddingRight="@dimen/dp_10"
           android:text="注：此表用于烟叶分级、交售预约，站点一体化收购模式不用填写集中分级及时段"
           android:textColor="@color/text_gray"/>


   </LinearLayout>

</ScrollView>